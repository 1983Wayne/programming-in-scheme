(define (prime-factors number)
  (cond ((< number 1) (display "Please enter a positive integer."))
        ((= number 1) (display "The only factor of 1 is 1!"))
        (else (prime-factors-helper number 2))))

(define (prime-factors-helper number factor)
  (cond ((= number factor) (writeln factor))
        ((= (remainder number factor) 0)
         (writeln factor)
         (prime-factors-helper (/ number factor) factor))
        (else (prime-factors-helper number (+ factor 1)))))
