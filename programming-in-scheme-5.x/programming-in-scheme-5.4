;;; Recursive procedure described by Schroeppel, Gosper, Henneman, and Banks in Hakmem.

(define (odd-up-even-down starting-number)
  (odd-even-helper 0 starting-number))

(define (odd-even-helper n number)
  (display "The number now: ")
  (display number)
  (newline)
  (cond ((= n 100) (display "FINAL NUMBER"))
        ((even? number) (odd-even-helper (+ n 1) (/ number 2)))
        (else (odd-even-helper  (+ n 1) (+ 1 (* 3 number))))))
